<Page
    x:Class="MultipleWindow.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:MultipleWindow"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid x:Name="ContentArea" Background="{StaticResource ApplicationPageBackgroundThemeBrush}">
        <Grid.ContextFlyout>
            <MenuFlyout x:Name="ContextMenuFlyout">
                <MenuFlyoutItem x:Name="Item1" Text="Item1"/>
                <MenuFlyoutItem x:Name="Item2" Text="Item2"/>
                <MenuFlyoutItem x:Name="Item3" Text="Item3"/>
                <MenuFlyoutItem x:Name="Item4" Text="Item4"/>
            </MenuFlyout>
        </Grid.ContextFlyout>
        
        <Button HorizontalAlignment="Center" Click="Button_Click">Go to the Secondary Window</Button>
    </Grid>
</Page>
